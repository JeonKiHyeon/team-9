<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/id_enteramount"
        android:layout_width="224dp"
        android:layout_height="53dp"
        android:hint="Sales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="58dp"
        tools:layout_editor_absoluteX="80dp"/>

    <TextView
        android:id="@+id/id_tip"
        android:layout_width="224dp"
        android:layout_height="53dp"
        android:hint="Tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="127dp" />

    <Button
        android:id="@+id/id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calculate"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="364dp" />

    <TextView
        android:id="@+id/id_text_total_amount"
        android:layout_width="224dp"
        android:layout_height="53dp"
        android:hint="Total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="201dp" />

    <TextView
        android:id="@+id/id_text_seekpercentage"
        android:layout_width="150dp"
        android:layout_height="17dp"
        android:text="0%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomof="@+id/id_seekbar"
        tools:layout_editor_absoluteY="273dp"
        tools:layout_editor_absoluteX="80dp"/>

    <SeekBar
        android:id="@+id/id_seekbar"
        android:layout_width="215dp"
        android:layout_height="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="305dp"
        tools:layout_editor_absoluteX="90dp"/>

    <RadioButton
        android:id="@+id/id_rand_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rand Tip"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="443dp" />

    <RadioButton
        android:id="@+id/id_max_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Tip"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="443dp" />

    <RadioButton
        android:id="@+id/id_no_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Tip"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="504dp" />

</androidx.constraintlayout.widget.ConstraintLayout>